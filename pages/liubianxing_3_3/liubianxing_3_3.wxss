/* pages/csspicture/csspicture.wxss */
.img-preview {
    width: 280px;
}

.box {
    /* background-color: pink;   */
    margin-top: 30rpx;
}

.line1 {
    position: relative;
}

.line2 {
    position: relative;
    top: -28px;
    left: 42px;
}

.line3 {
    position: relative;
    top: -56px;
}

.line4 {
    position: relative;
    top: -84px;
    left: 42px;
}

.line1,
.line2,
.line3,
.line4 {
    margin-left: 62rpx;
}

/* 清除浮动 */
.line1:after,
.line2:after,
.line3:after,
.line4:after {
    content: '';
    height: 0;
    line-height: 0;
    display: block;
    visibility: hidden;
    clear: both;
}

.boxF,
.boxS,
.boxT {
    width: 80px;
    height: 100px;
    overflow: hidden;
}

.boxF,
.boxS {
    visibility: hidden;
}

.boxF {
    transform: rotate(120deg);
    float: left;
}

.boxS {
    transform: rotate(-60deg);
}

.boxT {
    transform: rotate(-60deg);
    /* background: no-repeat 50% center; */
    /* background-size: 125% auto; */
    visibility: visible;
    background-repeat: no-repeat;
}

.pic-item {
    float: left;
    margin-left: 4px;
    display: inline-block;
    overflow: hidden;
}

.pic-item:after {
    content: '';
    height: 0;
    line-height: 0;
    display: block;
    visibility: hidden;
    clear: both;
}

