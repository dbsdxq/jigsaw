.next-tips {
    animation: animation-next-tips 0.5s linear 0s infinite forwards;
}

@keyframes animation-next-tips {
    0% {
        transform: scale(1);
    }

    50% {
        transform: scale(1.05);
    }

    100% {
        transform: scale(1);
    }
}